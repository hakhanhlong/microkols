
@{
    ViewData["Title"] = "Payment";
}

<h2 class="mb-4">@ViewData["Title"]</h2>
<div class="mb-5 bg-white rounded">
    <div class="payment">
        <div class="row">
            <div class="col-sm-3">
                <a href="@Url.Action("Recharge")">
                    <div class="card shadow bg-white rounded">
                        <img src="/img/deposite.jpg" width="334" height="209" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                Nạp tiền
                            </h5>
                            <p>Số lần nạp tiền <strong>5</strong></p>
