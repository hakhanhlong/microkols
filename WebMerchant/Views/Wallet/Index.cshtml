
@{
    ViewData["Title"] = "Thông tin ví";
}


<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("Recharge")">
            <div class="card  ">
                <img src="~/img/icon_naptien.png" style="width:250px;height:250px;" class="card-img-top img-card-true-size-center" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        Nạp tiền
                    </h5>
                    <hr />
                    <p class="mb-1">Số lần nạp tiền <strong>@ViewBag.CountRecharge</strong></p>
                    @{
                        var total = (long)(long)ViewBag.TotalRecharge;
                    }
                    <p>Tổng tiền đã nạp <strong class="text-danger">@total.ToPriceText()</strong></p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="@Url.Action("WithDraw")">
            <div class="card ">
                <img src="~/img/icon_ruttien.png" style="width:250px;height:250px;" class="card-img-top img-card-true-size-center" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        Rút tiền
                    </h5>
                    <hr />
                    <p class="mb-1">Số lần rút tiền <strong>@ViewBag.CountWithdraw</strong></p>
                    @{
                        total = (long)(long)ViewBag.TotalWithdraw;
                    }
                    <p>Tổng tiền đã rút <strong class="text-danger">@total.ToPriceText()</strong></p>
                </div>
            </div>
        </a>
    </div>
