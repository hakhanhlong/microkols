@{
    var campaign = (CampaignViewModel)ViewBag.Campaign;
}
<div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Thay đổi thời gian thực hiện chiến dịch
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="modal-body">
            @if (campaign != null)
            {
                <h6 class="title-campaign">@campaign.Title</h6>
                var time = string.Format("{0} - {1}", campaign.ExecutionStart.Value.ToViDateTime(), campaign.ExecutionStart.Value.ToViDateTime());
                <form asp-action="UpdateExecutionTime" method="post">
                    <div class="form-group">
                        <label>Thời gian thực hiện chiến dịch</label>
                        <input type="text" name="date" value="@time" class="form-control form-daterangepicker" />
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Thay đổi</button>
                            <input type="hidden" name="campaignid" value="@campaign.Id" />
                         </div>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-danger">Thông tin chiến dịch không đúng</div>
            }



        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Đóng</button>

        </div>


    </div>
</div>
<script type="text/javascript">
    $().ready(function () {

        $('.form-daterangepicker').daterangepicker({
            timePicker: true,
            //minDate: moment().startOf('hour').add(5, 'hour'),
            //startDate: moment().startOf('hour').add(5, 'hour'),
            //endDate: moment().startOf('hour').add(10, 'hour'),
            locale: {
                format: 'hh:mm A DD/MM/YYYY'
            }
        });
    });
</script>