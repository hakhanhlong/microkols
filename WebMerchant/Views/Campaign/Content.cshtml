@model ListGroupCampaignAccountContentViewModel
@inject WebServices.Interfaces.IAccountService  AccountService
@{
    ViewData["Title"] = "Duyệt nội dung chiến dịch";
    var campaign = (CampaignViewModel)ViewBag.Campaign;

    var currenturl = Url.Action("Content", new { campaignid = campaign.Id, pageindex = Model.Pager.Page, pagesize = Model.Pager.PageSize });
}

<h2>@ViewData["Title"] </h2>

<h3>@campaign.Title</h3>


<div class="shadow p-3 mb-5 bg-white rounded">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-borderless mt-3">
                <thead>
                    <tr>

                        <th><input type="checkbox" class="cb-checkall" /></th>
                        <th scope="col">#</th>
                        <th scope="col">Họ và Tên</th>
                        <th scope="col" width="550">Nội dung</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.CampaignGroupAccountContents)
                    {
                        var lastContent = item.LastContent;

                        var account = await AccountService.GetAccount(lastContent.AccountId);

                        <tr>

                            <td><input type="checkbox" class="cb-checkitem cb-checkitemChuaDuyet" value="@lastContent.Id" /></td>
                            <th scope="row">1</th>
                            <td><a href="#" class="kol-join"><img src="@AppOptions.CurrentValue.GetImageUrl(account.Avatar)" width="32" height="32">@account.Name</a></td>
                            <td>
                                <p class="d-inline-block text-wrap" style="max-width: 550px">
                                    @lastContent.Content
                                </p>

                                @if (lastContent.Image.Count > 0)
                                {
                                    <ul class="list-inline">
                                        @foreach (var img in lastContent.Image)
                                        {

                                            <li class="list-inline-item">
                                                <a href="@AppOptions.CurrentValue.GetImageUrl(img)" class="open-img-popup" target="_blank">

                                                    <img src="@AppOptions.CurrentValue.GetImageUrl(img)" height="32">
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                                @if (!string.IsNullOrEmpty(lastContent.Note))
                                {
                                    <p>
                                        <strong>Ghi chú từ doanh nghiệp</strong> <br />
                                        <em class="text-secondary">@lastContent.Note</em>
                                    </p>
                                }

                            </td>
                            <td> @lastContent.Status.ToBadge() </td>
                            <td>
                                @if (lastContent.Status == CampaignAccountContentStatus.ChoDuyet)
                                {
                                    <form action="@Url.Action("FeedbackContent")" class="frmFeedback" method="post">

                                        <input type="hidden" name="returnurl" value="@currenturl" />
                                        <input type="hidden" name="campaignid" value="@ViewBag.CampaignId" />
                                        <input type="hidden" name="ids" value="@lastContent.Id" />
                                        <button class="btn btn-sm btn-success" type="submit" name="type" value="1">Duyệt</button>
                                        <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#edit-caption-@lastContent.AccountId">Yêu cầu sửa nội dung</button>

                                        <button class="btn btn-sm btn-danger" type="submit" name="type" value="0">Từ chối</button>



                                    </form>
                                    <!-- Modal -->
                                    <div class="modal fade" style="z-index: 9999999;" id="edit-caption-@lastContent.AccountId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Yêu cầu sửa  nội dung</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <h6 class="title-campaign">@campaign.Title</h6>
                                                    <div class="statistic-social mb-3">
                                                        <a href="#" class="kol-join"><img src="@AppOptions.CurrentValue.GetImageUrl(account.Avatar)" width="32" height="32">@account.Name</a>
                                                        <span title="Lượt thích trung bình">@account.AccountCounting.AvgLikeCount <i class="fa fa-thumbs-up"></i></span>
                                                        <span class="px-2" title="Lượt chia sẻ trung bình">@account.AccountCounting.AvgShareCount <i class="fa fa-share"></i></span>
                                                        <span title="Lượt bình luận trung bình">@account.AccountCounting.AvgCommentCount <i class="fa fa-comment"></i></span>
                                                    </div>
                                                    <nav class="mb-3">
                                                        <div class="nav nav-tabs nav-campaign" id="nav-tab" role="tablist">
                                                            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home-@lastContent.AccountId" role="tab" aria-controls="nav-home" aria-selected="true" style="text-transform: uppercase;">VIẾT GHI CHÚ</a>
                                                            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile-@lastContent.AccountId" role="tab" aria-controls="nav-profile" aria-selected="false" style="text-transform: uppercase;">LỊCH SỬ YÊU CẦU THAY ĐỔI</a>
                                                        </div>
                                                    </nav>
                                                    <div class="tab-content" id="nav-tabContent">
                                                        <div class="tab-pane fade show active" id="nav-home-@lastContent.AccountId" role="tabpanel" aria-labelledby="nav-home-tab">

                                                            <form asp-action="UpdateContentNote">

                                                                <div class="form-group">
                                                                    <label for="exampleInputEmail1">Ghi chú sửa nội dung</label>
                                                                    <textarea class="form-control" rows="3" name="note" required></textarea>

                                                                </div>
                                                                <div class="text-center">
                                                                    <input type="hidden" name="id" value="@lastContent.Id" />
                                                                    <input type="hidden" name="campaignid" value="@ViewBag.CampaignId" />
                                                                    <input type="hidden" name="returnurl" value="@currenturl" />
                                                                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                                                                </div>
                                                            </form>

                                                        </div>
                                                        <div class="tab-pane fade" id="nav-profile-@lastContent.AccountId" role="tabpanel" aria-labelledby="nav-profile-tab">
                                                            @{ var no = 1;}
                                                            <table class="table table-borderless mt-3">
                                                                <thead>
                                                                    <tr>
                                                                        <th scope="col">#</th>
                                                                        <th scope="col" width="550">Content</th>
                                                                        <th scope="col">Ngày tháng</th>
                                                                        <th scope="col"></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var item2 in item.Contents)
                                                                    {
                                                                        <tr>
                                                                            <th scope="row">@no</th>
                                                                            <td>
                                                                                <p class="d-inline-block text-wrap" style="max-width: 550px;">
                                                                                    @item2.Content
                                                                                </p>

                                                                                @if (item2.Image.Count > 0)
                                                                                {
                                                                                    <ul class="list-inline">
                                                                                        @foreach (var img in item2.Image)
                                                                                        {

                                                                                            <li class="list-inline-item">
                                                                                                <img src="@AppOptions.CurrentValue.GetImageUrl(img)" height="32">
                                                                                            </li>
                                                                                        }
                                                                                    </ul>
                                                                                }
                                                                                @if (!string.IsNullOrEmpty(item2.Note))
                                                                                {
                                                                                    <p>
                                                                                        <strong>Ghi chú từ doanh nghiệp</strong> <br />
                                                                                        <em class="text-secondary">@item2.Note</em>
                                                                                    </p>
                                                                                }
                                                                            </td>
                                                                            <td> @item2.DateCreated.ToViDateTime()</td>
                                                                            <td> @item2.Status.ToBadge()</td>
                                                                        </tr>
                                                                        no++;
                                                                    }


                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#caption-history-@lastContent.AccountId">Lịch sử</button>


                                    <div class="modal fade" style="z-index: 9999999;" id="caption-history-@lastContent.AccountId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Lịch sử sửa nội dung</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <h6 class="title-campaign">@campaign.Title</h6>
                                                    <div class="statistic-social mb-3">
                                                        <a href="#" class="kol-join"><img src="@AppOptions.CurrentValue.GetImageUrl(account.Avatar)" width="32" height="32">@account.Name</a>
                                                        <span title="Lượt thích trung bình">@account.AccountCounting.AvgLikeCount <i class="fa fa-thumbs-up"></i></span>
                                                        <span class="px-2" title="Lượt chia sẻ trung bình">@account.AccountCounting.AvgShareCount <i class="fa fa-share"></i></span>
                                                        <span title="Lượt bình luận trung bình">@account.AccountCounting.AvgCommentCount <i class="fa fa-comment"></i></span>
                                                    </div>
                                                    @{ var no = 1;}
                                                    <table class="table table-borderless mt-3">
                                                        <thead>
                                                            <tr>
                                                                <th scope="col">#</th>
                                                                <th scope="col" width="550">Content</th>
                                                                <th scope="col">Ngày tháng</th>
                                                                <th scope="col"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item2 in item.Contents)
                                                            {
                                                                <tr>
                                                                    <th scope="row">@no</th>
                                                                    <td>
                                                                        <p class="d-inline-block text-wrap" style="max-width: 550px;">
                                                                            @item2.Content
                                                                        </p>
                                                                        @if (item2.Image.Count > 0)
                                                                        {
                                                                            <ul class="list-inline">
                                                                                @foreach (var img in item2.Image)
                                                                                {

                                                                                    <li class="list-inline-item">
                                                                                        <img src="@AppOptions.CurrentValue.GetImageUrl(img)" height="32">
                                                                                    </li>
                                                                                }
                                                                            </ul>
                                                                        }
                                                                        @if (!string.IsNullOrEmpty(item2.Note))
                                                                        {
                                                                            <p>
                                                                                <strong>Ghi chú từ doanh nghiệp</strong> <br />
                                                                                <em class="text-secondary">@item2.Note</em>
                                                                            </p>
                                                                        }
                                                                    </td>
                                                                    <td> @item2.DateCreated.ToViDateTime()</td>
                                                                    <td> @item2.Status.ToBadge()</td>
                                                                </tr>
                                                                no++;
                                                            }


                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <form action="@Url.Action("FeedbackContent")" class="frmFeedbackAll frmFeedback" method="post" style="display:none">

                            <input type="hidden" name="returnurl" value="@currenturl" />
                            <input type="hidden" name="campaignid" value="@campaign.Id" />
                            <button class="btn btn-sm btn-primary" type="submit" name="type" value="1">Duyệt tất cả</button>
                            <button class="btn btn-sm btn-danger" type="submit" name="type" value="0">Từ chối tất cả</button>
                            <div class="frmFeedbackAll-ids"></div>
                        </form>
                    </div>
                    <div class="col-md-6">

                        <pager pager="@Model.Pager" asp-action="Content" asp-route-campaignid="@campaign.Id"></pager>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>