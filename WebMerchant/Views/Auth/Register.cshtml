@model RegisterAgencyViewModel

@{
    ViewBag.Title = "Đăng ký tài khoản doanh nghiệp";
    Layout = "_LayoutAuth";

}

@section Styles{

    <link href="~/css/signin.css" rel="stylesheet" asp-append-version="true" />
}

<form class="form-signin" method="post">

    <alert></alert>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">


        <input asp-for="Name" class="form-control" />

    </div>

    <div class="form-group">

        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">

        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
    </div>
    <div class="form-group">

        <button class="btn btn-lg btn-primary" type="submit">Đăng ký</button>
    </div>
    <p class="mt-5 text-muted">Bạn đã có tài khoản doanh nghiệp? <a href="@Url.Action("Login")" class="font-weight-bold text-primary">Đăng nhập</a></p>
    <hr />
    <p class="font-italic">
        Bằng việc đăng ký hay đăng nhập, bạn đã đồng ý với <a href="https://microkols.com/policy.html" class="font-weight-bold text-primary">Chính sách</a> & <a href="#" class="font-weight-bold text-primary">Quy định</a>
    </p>
</form>