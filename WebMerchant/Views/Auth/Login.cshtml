@model AgencyLoginViewModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "_LayoutAuth";

}

@section Styles{
     
}



<form asp-action="Login"  method="post">
     
    <alert></alert>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">

        <input asp-for="Password" class="form-control" />
    </div>
    <div class="row form-group">
        <div class="col-md-6">



            <input asp-for="Remember" type="hidden" value="true" />
            <button class="btn btn-lg btn-primary " type="submit">Đăng nhập</button>
            @*<label>

            <input asp-for="Remember" type="checkbox" />
            Ghi nhớ mật khẩu
        </label>*@
        </div>
        <div class="col-md-6 d-flex justify-content-end">
            <a href="#">Quên mật khẩu?</a>
        </div>
    </div> 
     
    <p class="mt-5 text-muted">Bạn chưa có tài khoản? <a href="@Url.Action("Register")" class="font-weight-bold text-primary">Đăng ký</a></p>
    <hr />
    <p class="font-italic">
        Bằng việc đăng ký hay đăng nhập, bạn đã đồng ý với <a href="#" class="font-weight-bold text-primary">Chính sách</a> & <a href="#" class="font-weight-bold text-primary">Quy định</a>
    </p>
</form>
