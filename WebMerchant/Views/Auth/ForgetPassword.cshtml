
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<h3>Quên mật khẩu</h3>

<form class="form-signin" method="post" action="/auth/forgetpassword">

    <alert></alert>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">

        <input type="email" placeholder="Nhập email" name="email" id="email" required class="form-control" />

    </div>
    
    
    <div class="form-group" style="text-align:center">

        <button class="btn btn-lg btn-primary" type="submit">Lấy lại mật khẩu</button>

    </div>

    <p class="mt-5 text-muted">Bạn đã có tài khoản doanh nghiệp? <a href="@Url.Action("Login")" class="font-weight-bold text-primary">Đăng nhập</a></p>
    <hr />
    <p class="font-italic">
        Bằng việc đăng ký hay đăng nhập, bạn đã đồng ý với <a href="https://microkols.com/policy.html" class="font-weight-bold text-primary">Chính sách</a> & <a href="https://microkols.com/policy.html" class="font-weight-bold text-primary">Quy định</a>
    </p>
</form>

