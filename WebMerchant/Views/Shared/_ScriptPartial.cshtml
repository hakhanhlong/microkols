@{
    var controller = ViewContext.RouteData.Values["Controller"].ToString().ToLower();
    var action = ViewContext.RouteData.Values["Action"].ToString().ToLower();
}
<input id="FbAppId" type="hidden" value="@AppOptions.CurrentValue.FacebookAppId" />
<input id="CurrentPage" type="hidden" value="@($"{controller}_{action}")" />
<script src="~/lib/js.cookie/js.cookie.min.js"></script>
<script src="~/lib/daterangepicker/moment.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/lib/bootstrap-4.4.1-dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap-notify/bootstrap-notify.min.js"></script>
<script src="~/lib/select2/dist/js/select2.min.js"></script>
<script src="~/lib/daterangepicker/daterangepicker.js"></script>
<script src="~/lib/owlcarousel2/dist/owl.carousel.min.js"></script>
<script src="~/lib/vuejs/vue.js"></script>
<script src="~/build/js/app.js" asp-append-version="true"></script>
<script src="~/js/website.js" asp-append-version="true"></script>
@if (User.Identity.IsAuthenticated)
{

    <script type="text/javascript">
        AppSettings.IsAuthenticated = true;
        AppSettings.CurrentUser.Username = '@CurrentUser.Username';
        AppSettings.CurrentUser.Name = '@CurrentUser.Name';
        AppSettings.CurrentUser.Type = @((int) CurrentUser.Type);



          $(document).ready(function () {
            // active navbar of page current
            var urlcurrent = window.location.href;
            $(".sidebar-sticky ul li a[href$='"+urlcurrent+"']").addClass('active');

            $('.navbar-toggler').on('click',function () {
              $('.sidebar').toggleClass('is-show');
           });
           $('.sidebar .close').on('click',function () {
               $('.sidebar').removeClass('is-show');
           });
            $(document).mouseup(function(e){
                var container = $(".sidebar,.navbar-toggler");
                if (!container.is(e.target) && container.has(e.target).length === 0)
                {
                    $('.sidebar').removeClass('is-show');
                }
            });
        });

    </script>

}