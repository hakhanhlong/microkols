<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Merchant | Microkols | Nền tảng influencer marketing dẫn đầu Việt Nam</title>
    <partial name="_StylePartial" />
    <link href="~/css/signin.css" rel="stylesheet" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <link href="/img/favicon.png" type="image/png" rel="shortcut icon" />
</head>
<body>
    <div class="page-signin">
        <div class="logo">
            <a href="https://microkols.com" style="text-decoration:none;"><img src="~/img/logo.png" /></a>
        </div>
        <div class="main">

            <div class="container">


                <div class="content">
                    <nav class="nav nav-pills nav-content flex-column flex-sm-row">
                        <a class="flex-sm-fill text-sm-center nav-link active" href="">Doanh nghiệp</a>
                        <a class="flex-sm-fill text-sm-center nav-link " href="https://influencer.microkols.com/Auth/Login">Influencer</a>
                    </nav>
                    <div class="tab-content">
                        <div class="tab-pane fade show active">
                            @RenderBody()

                        </div>
                    </div>

                </div>

            </div>



        </div>
    </div>

    <partial name="_ScriptPartial" />
    @RenderSection("Scripts", required: false)
</body>
</html>
