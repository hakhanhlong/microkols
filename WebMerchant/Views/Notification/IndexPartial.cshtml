@model List<NotificationViewModel>

@if (Model != null && Model.Count > 0)
{

    foreach (var item in Model)
    {


        <div class="dropdown-item-text item-@(item.Status)" data-id="@item.Id">
            <a href="@Url.GetNotificationUrl(item)" data-type="@item.Type">
                @item.Message
            </a>
            <br />
            <span class="text-muted small"> <i class="fal fa-clock"></i> @item.Date.ToTimeAgo()</span>
        </div>

    }
    <div class="dropdown-divider"></div>

    <a href="@Url.Action("Index")" class="dropdown-item">Xem tất cả thông báo</a>

}
else
{
    <div class="dropdown-item-text">

        Bạn chưa có thông báo!

    </div>
}
