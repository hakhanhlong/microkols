@model CampaignWithAccountViewModel



<div class="card mb-3">
    <div class="card-header d-flex">

        <div class="mr-auto">
            Chiến dịch @Model.Id
        </div>


        <div>
            @Model.Status.ToBadge()
        </div>

    </div>
    <div class="card-body">
        <div class="card-text">
            <div>
                Doanh nghiệp: <span class="text-primary">@Model.UserCreated</span>
            </div>

            <div>
               Công việc: @Model.Type.ToDisplayName()
            </div>

            <div>@Model.CampaignAccount.Status.ToBadge()</div>
            <div>
                Số tiền nhận:  <span class="text-success">@Model.CampaignAccount.AccountChargeAmount.ToPriceText()</span>
            </div>
        </div>

        <div class="d-flex  mt-3">
            <div class="text-muted mr-auto">
                <small>
                    @Model.DateCreated.ToTimeAgo()
                </small>

            </div>
            <div class="text-right">



                <a asp-action="Details" asp-route-id="@Model.Id" class=" btn btn-primary btn-sm">Chi tiết</a>

            </div>
        </div>



    </div>
</div>