                {
                    if (Model.Status == CampaignStatus.Completed)
                    {
                        <div class="alert alert-info">Chiến dịch đã kết thúc</div>

                    }
                    else
                    {
                        <div class="alert alert-info">Bạn đã hoàn thành công việc. Ngay sau khi chiến dịch kết thúc bạn sẽ nhận được tiền vào tài khoản</div>


                    }
                }


            </div>


        </div>
    </div>



