@model List<QnAGroupViewModel>

@{
    ViewData["Title"] = "Hỏi đáp";
}

@section Top{

    <div class="pagetitle">
        <div class="container d-flex">
            <div class="mr-auto">

                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a asp-action="Index">Nội dung</a></li>

                </ol>

                <h1>@ViewData["Title"]</h1>

            </div>


        </div>
    </div>
}

@{
    var i = 0;
}

@foreach (var item in Model)
{
    i++;

    var accordionTitle = $"accordion{i}";
    var k = 0;
    <h3 class="mt-3">@item.Title</h3>

    <div class="accordion" id="@accordionTitle">

        @foreach (var item2 in item.QnAs)
        {

            k++;

            var collapse = $"collapse{i}{k}";
            <div class="card">
                <div class="card-header p-1">
                    <h2 class="mb-0">
                        <button class="btn btn-link text-left" type="button" data-toggle="collapse" data-target="#@collapse" aria-expanded="true" aria-controls="collapseOne">
                            @item2.Question
                        </button>
                    </h2>
                </div>
                <div id="@collapse" class="collapse" aria-labelledby="headingOne" data-parent="#@accordionTitle">
                    <div class="card-body">
                        @item2.Answer
                    </div>
                </div>
            </div>
        }

    </div>
}