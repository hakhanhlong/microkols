@model RegisterAgencyViewModel

@{
    ViewBag.Title = "Đăng ký doanh nghiệp";

}

@section scripts{
  
}

<div class="container">

    <div class="row">


        <div class="col-md-6 offset-3">


            <h1 class="h3 text-center font-weight-normal">Đăng nhập - Doanh nghiệp</h1>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <alert></alert>


            <form asp-action="AgencyRegister" method="post"  enctype="multipart/form-data">

                <div class="form-group">

                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>


                <div class="form-group">

                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" type="hidden" />
                    ​<div class="d-flex justify-content-center mb-1 border">
                        <img src="" class="img-fluid align-self-center img-Image" alt="">
                    </div>

                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input image-upload"
                                   id="uploadimg01" data-target="#Image" data-preview=".img-Image" />
                            <label class="custom-file-label" for="uploadimg01">
                                Chọn file
                            </label>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block ">
                        Đăng ký
                    </button>
                </div>

            </form>


          
        </div>
    </div>

</div>


