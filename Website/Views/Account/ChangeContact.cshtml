@model ChangeContactViewModel
@{
    ViewBag.Title = "Cài đặt";
}



<h2>@ViewBag.Title</h2>

<partial name="_SettingNavPartial" model="3" />
<div class="tab-content mt-3">
    <div class="tab-pane fade show active">


        <form method="post" action="@Url.Action("ChangeContact")" enctype="multipart/form-data">

            <alert></alert>


            <div class="form-group">
                <label asp-for="Phone"></label>
                <input type="text" class="form-control" asp-for="Phone" />
                <span asp-validation-for="Phone"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>

                <input type="text" class="form-control" asp-for="Address" />

                <span asp-validation-for="Address"></span>
            </div>

            @{

                var citites = (List<EntityViewModel>)ViewBag.Cities;
                var districts = (List<EntityViewModel>)ViewBag.Districts;
            }
            <div class="form-group">

                <label asp-for="CityId"></label>

                <select name="CityId" id="CityId" data-district="@Model.DistrictId" class="form-control">
                    @foreach (var c in citites)
                    {
                        <!option value="@c.Id" @(Model != null && c.Id == Model.CityId ? "selected=selected" : "")>
                            @c.Name
                        </!option>
                    }
                </select>
            </div>
            <div class="pdistrict form-group" style="display:none">

                <label asp-for="DistrictId"></label>
                <select name="DistrictId" id="DistrictId" class="form-control"></select>

            </div>

            <div class="form-group">
                <input type="submit" value="Đồng ý" class="btn btn-primary">
            </div>
        </form>



    </div>

</div>

