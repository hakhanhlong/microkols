@model ListAccountFbPostViewModel
@{
    ViewData["Title"] = "Facebook Post";
}
@section Top{

    <div class="pagetitle">
        <div class="container d-flex">
            <div class="mr-auto">

                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a asp-action="Index">Tài khoản</a></li>

                </ol>

                <h1>@ViewData["Title"]</h1>

            </div>


        </div>
    </div>
}


<ul class="nav nav-tabs nav-linetabs">
    <li class="nav-item">
        <a class="nav-link " asp-action="Index">Tài khoản</a>
    </li>

    <li class="nav-item">
        <a class="nav-link active" asp-action="FbPost">Facebook Post</a>
    </li>

</ul>



<div class="tab-content mt-3">
    <div class="tab-pane fade show active">

        <div class="row">


            @foreach (var item in Model.Posts)
            {
                <div class="col-md-3">

                    <partial name="_FbPostItemPartial" model="@item" />
                  
                </div>
            }

        </div>
        <pager pager="@Model.Pager" asp-action="Index"></pager>

    </div>
</div>