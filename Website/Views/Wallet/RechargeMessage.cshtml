<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Thanh toán </h5>
        </div>

        <div class="modal-body">
            @if (ViewBag.Success != null)
            {

                if (ViewBag.Campaign != null)
                {

                    var campaign = (CampaignDetailsViewModel)ViewBag.Campaign;

                    <p class="text-success text-center">
                        Bạn đã gửi yêu cầu nạp tiền chiến dịch @campaign.Code thành công. Vui lòng chờ quản trị hệ thống duyệt giao dịch và kích hoạt chiến dịch cho bạn
                    </p>
                }
                else
                {
                    <p class="text-success text-center">
                        <strong>
                            @ViewBag.Success
                        </strong>
                    </p>

                }
            }


            @if (ViewBag.Error != null)
            {
                <p class="text-danger text-center">

                    @ViewBag.Error

                </p>
            }

        </div>
        <div class="modal-footer">
            @if (ViewBag.Campaign != null)
            {

                <a href="@Url.Action("Index","AgencyCampaign")" class="btn btn-primary">Đồng ý</a>
            }
            else
            {
                <button type="button" class="btn btn-outline-dark btn-reload">Đóng</button>
            }

        </div>
    </div>
  
</div>