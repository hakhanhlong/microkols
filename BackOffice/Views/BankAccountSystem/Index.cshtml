
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Core.Entities.BankAccountSystem>

@section Subheaders{
    <h3 class="m-subheader__title m-subheader__title--separator">
        Danh sách tài khoản ngân hàng hệ thống
    </h3>
    <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
        <li class="m-nav__item m-nav__item--home">
            <a href="#" class="m-nav__link m-nav__link--icon">
                <i class="m-nav__link-icon la la-home"></i>
            </a>
        </li>
    </ul>
}

    <div class="row">
        <div class="col-xl-12">
            <!--begin::Portlet-->
            <div class="m-portlet m-portlet--tabs">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                Danh sách tài khoản ngân hàng hệ thống
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__body">                 
                    <!--begin::Section-->
                    <div class="m-section">
                        <div class="m-section__content">

                            @if (Model != null)
                            {
                                int count = 0;
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Tên tài khoản</th>
                                            <th>Số tài khoản</th>
                                            <th>Ngân hàng</th>
                                            <th>Chi nhánh</th>
                                            <th>Hoạt động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@(count)</td>
                                                <td>
                                                    <a href="/BankAccountSystem/Edit/?id=@(item.Id)">@item.BankAccountName</a>
                                                </td>
                                                <td>@item.BankAccountNumber</td>
                                                <td>@item.BankName</td>
                                                <td>@item.BankBranch</td>
                                                <td>@(item.IsActive == true?"Hoạt động": "Không hoạt động")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            }
                        </div>
                    </div>
                    <!--end::Section-->
                </div>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->
        </div>
    </div>