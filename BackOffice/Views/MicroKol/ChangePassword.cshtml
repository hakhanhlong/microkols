<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            Thay mật khẩu @(Model != null ? string.Format("\"{0}\"", Model.Name) : "")
                        </h3>
                    </div>
                </div>
            </div>
            <!--begin::Form-->
            <form class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" method="post" action="/microkol/changepassword">
                <input type="hidden" asp-for="Id"/>
                <div class="m-portlet__body">
                    <div class="form-group m-form__group row">
                        <label class="col-lg-2 col-form-label">
                            Mật khẩu cũ:
                        </label>
                        <div class="col-lg-6">
                            <input type="email" class="form-control m-input" placeholder="Enter old password" asp-for="OldPassword">
                            <span class="m-form__help">
                                Hãy nhập mật khẩu cũ
                            </span>
                            <span asp-validation-for="OldPassword"></span>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-lg-2 col-form-label">
                            Mật khẩu mới:
                        </label>
                        <div class="col-lg-6">
                            <input type="email" class="form-control m-input" placeholder="Enter new password" asp-for="NewPassword">
                            <span class="m-form__help">
                                Hãy nhập mật khẩu mới
                            </span>
                            <span asp-validation-for="NewPassword"></span>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label class="col-lg-2 col-form-label">
                            Nhắc lại mật khẩu mới:
                        </label>
                        <div class="col-lg-6">
                            <input type="email" class="form-control m-input" placeholder="Enter confirm new password" asp-for="ConfirmPassword">
                            <span class="m-form__help">
                                Please enter your confirm new password
                            </span>
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>

                </div>
                <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions--solid">
                        <div class="row">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-6">
                                <button type="submit" class="btn btn-primary">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-secondary">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>
</div>




