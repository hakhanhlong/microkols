<form class="m-form m-form--fit m--margin-bottom-20" action="/microkol/CampaignMicrokol" method="get">
    <div class="row m--margin-bottom-20">        
        <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile">
            <label>
                Status:
            </label>
            <select class="form-control m-input" data-col-index="7" name="status">
                @foreach (var item in ViewBag.Status)
                {
                    if (item.Value == Context.Request.Query["status"])
                    {
                        <option value="@item.Value" selected>@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }

                }
            </select>
        </div>
    </div>    
    <div class="m-separator m-separator--md m-separator--dashed"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="float-right">
                <button class="btn btn-brand m-btn m-btn--icon" id="m_search">
                    <span>
                        <i class="la la-search"></i>
                        <span>
                            Search
                        </span>
                    </span>
                </button>
                &nbsp;&nbsp;
                <button class="btn btn-secondary m-btn m-btn--icon" id="m_reset" type="reset">
                    <span>
                        <i class="la la-close"></i>
                        <span>
                            Reset
                        </span>
                    </span>
                </button>
            </div>

        </div>
    </div>
</form>
