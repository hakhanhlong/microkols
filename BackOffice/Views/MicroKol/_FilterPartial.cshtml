<form class="m-form m-form--fit m--margin-bottom-20" action="/microkol/search">
    <div class="row m--margin-bottom-20">
        <div class="col-lg-9 m--margin-bottom-10-tablet-and-mobile">
            <label>
                Từ khóa:
            </label>
            <input type="text" name="keyword" value="@(Context.Request.Query["keyword"])" class="form-control m-input" placeholder="Email, Tên, Số điện thoại, CMT" data-col-index="0">
        </div>
        <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile">
            <label>
                Loại:
            </label>
            <select class="form-control m-input" data-col-index="7" name="type">
                <option value="All">Tất cả</option>
                <option value="Regular">Tài khoản thường</option>
                <option value="HotTeen">Tài khoản Hot Teen</option>
                <option value="HotMom">Tài khoản Hot Mom</option>
                <option value="HotFacebooker">Tài khoản Hot Facebooker</option>
                <option value="Kols">Tài khoản Kols</option>
            </select>
        </div>
    </div>    
    <div class="m-separator m-separator--md m-separator--dashed"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="float-right">
                <button class="btn btn-brand m-btn m-btn--icon" id="m_search">
                    <span>
                        <i class="la la-search"></i>
                        <span>
                            Search
                        </span>
                    </span>
                </button>
                &nbsp;&nbsp;
                <button class="btn btn-secondary m-btn m-btn--icon" id="m_reset" type="reset">
                    <span>
                        <i class="la la-close"></i>
                        <span>
                            Reset
                        </span>
                    </span>
                </button>
            </div>

        </div>
    </div>
</form>
