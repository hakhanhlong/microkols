
@{
    ViewData["Title"] = "QnA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebServices.ViewModels.ListQnAViewModel

@section Subheaders{
    <h3 class="m-subheader__title m-subheader__title--separator">
        QnA Listing
    </h3>
}

<div class="row">
    <div class="col-xl-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            QnA Listing
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin::Section-->
                <div class="m-section">
                    <div class="m-section__content">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th style="width:120px;">
                                        Câu hỏi
                                    </th>
                                    <th style="width:720px;">
                                        Nội dung
                                    </th>
                                    <th>
                                        Trạng thái
                                    </th>
                                    <th>
                                        Ngày thay đổi
                                    </th>
                                    <th>
                                        Người thay đổi
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    int count = 0;
                                    foreach (var item in Model.List_QnA)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Order</td>
                                            <td>
                                                <strong>
                                                    <a href="/LandingPage/UpdateQnA/?id=@item.Id">@item.Question</a>
                                                </strong>
                                                <br />
                                                <p>
                                                    @item.Answer
                                                </p>
                                            </td>
                                            <td>@item.IsActive</td>
                                            <td>@item.DateModified</td>
                                            <td>@item.UserModified</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <pagerservice pager="@Model.Pager" asp-action="QnA" asp-route-type="@Context.Request.Query["type"]"></pagerservice>
                    </div>
                </div>
                <!--end::Section-->
            </div>
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>
</div>