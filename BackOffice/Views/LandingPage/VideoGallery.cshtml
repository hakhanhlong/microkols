
@{
    ViewData["Title"] = "VideoGallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebServices.ViewModels.ListVideoGalleryViewModel

@section Subheaders{
    <h3 class="m-subheader__title m-subheader__title--separator">
        Video Gallery Listing
    </h3>
}

@section Subheaders2{

    <ul class="list-inline">
        <li class="list-inline-item">
            <a href="/landingpage/createvideogallery" class="btn btn-info m-btn m-btn--icon">
                <span>
                    <i class="fa fa-plus"></i>
                    <span>THÊM VIDEO GALLERY</span>
                </span>
            </a>
        </li>
    </ul>
}

    <div class="row">
        <div class="col-xl-12">
            <!--begin::Portlet-->
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                QnA Listing
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__body">
                    <!--begin::Section-->
                    <div class="m-section">
                        <div class="m-section__content">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th style="width:120px;">
                                            Video
                                        </th>
                                        <th>
                                            Ảnh
                                        </th>
                                        <th>
                                            Key Nhúng
                                        </th>
                                        <th>
                                            Link Nhúng
                                        </th>
                                        <th>
                                            Trạng thái
                                        </th>
                                        <th>
                                            Ngày thay đổi
                                        </th>
                                        <th>
                                            Người thay đổi
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        int count = 0;
                                        foreach (var item in Model.VideoGalleries)
                                        {
                                            count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Order</td>
                                        <td>
                                            <a href="/LandingPage/UpdateVideoGallery/?id=@item.Id">
                                                
                                                <img src="@(AppConstants.RESOURCE_SERVER + "/" + item.ImageURL)" style="border:0px;"/>

                                            </a>
                                        </td>
                                        <td>@item.EmbedKey</td>
                                        <td>@item.VideoEmbed</td>
                                        <td>@item.IsActive</td>
                                        <td>@item.DateModified</td>
                                        <td>@item.UserModified</td>
                                    </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <pagerservice pager="@Model.Pager" asp-action="VideoGallery"></pagerservice>
                        </div>
                    </div>
                    <!--end::Section-->
                </div>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->
        </div>
    </div>

