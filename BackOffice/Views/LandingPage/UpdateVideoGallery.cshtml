
@{
    ViewData["Title"] = "UpdateVideoGallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebServices.ViewModels.VideoGalleryViewModel

@section Subheaders{
    <h3 class="m-subheader__title m-subheader__title--separator">
        Video Gallery Listing
    </h3>
    <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
        <li class="m-nav__item m-nav__item--home">
            <a href="/" class="m-nav__link m-nav__link--icon">
                <i class="m-nav__link-icon la la-home"></i>
            </a>
        </li>
        <li class="m-nav__separator">
            -
        </li>
        <li class="m-nav__item">
            <a href="/landingpage/videogallery" class="m-nav__link">
                <span class="m-nav__link-text">
                    Video Gallery Listing
                </span>
            </a>
        </li>
        <li class="m-nav__separator">
            -
        </li>
        @if (Model.Id == 0)
        {
            <li class="m-nav__item">
                <a href="/landingpage/createvideogallery" class="m-nav__link">
                    <span class="m-nav__link-text">
                        Add Video Gallery
                    </span>
                </a>
            </li>
        }
        else
        {
            <li class="m-nav__item">
                <a href="" class="m-nav__link">
                    <span class="m-nav__link-text">
                        Edit Video Gallery
                    </span>
                </a>
            </li>
        }

    </ul>
}

<div class="row">
    <div class="col-xl-12">
        <!--begin::Portlet-->
        <div class="m-portlet m-portlet--tab">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            @(Model.Id == 0 ? "Add Video Gallery" : "Edit Video Gallery")
                        </h3>
                    </div>
                </div>
            </div>
            <!--begin::Form-->
            <form class="m-form m-form--fit m-form--label-align-right" method="post" asp-action="UpdateVideoGallery" enctype="multipart/form-data">
                <input type="hidden" value="@Model.Id" name="Id" />
                <input type="hidden" value="@Model.ImageURL" asp-for="ImageURL" />
                <div class="m-portlet__body">
                    <div asp-validation-summary=" All" class="text-danger"></div>
                    <div class="form-group m-form__group">
                        <label for="question">
                            Đường dẫn nhúng Video
                        </label>
                        <input class="form-control m-input m-input--square" placeholder="Nhập Đường dẫn nhúng Video" asp-for="VideoEmbed" />
                    </div>
                    <div class="form-group m-form__group">
                        <label for="answer">
                            Key mã nhúng
                        </label>
                        <input class="form-control m-input m-input--square" placeholder="Nhập Key mã nhúng" asp-for="EmbedKey" />
                    </div>
                    <div class="form-group m-form__group">
                        <label for="answer">
                            Ảnh đại diện
                        </label>
                        <input class="form-control m-input m-input--square" placeholder="Tải ảnh đại diện" asp-for="fileUpload" />
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                    {
                        <div class="form-group m-form__group">
                            <img src="@(AppConstants.RESOURCE_SERVER + "/" + Model.ImageURL)" width="110" height="110" class="img-thumbnail" />
                        </div>
                    }
                    <div class="m-form__group form-group">
                        <label for=""> Status </label>
                        <div class="m-checkbox-inline">
                            <label class="m-checkbox">
                                <input asp-for="IsActive">
                                Hoạt động/Không hoạt động
                                <span></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__foot m-portlet__foot--fit">
                    <div class="m-form__actions">
                        <button type="submit" class="btn btn-primary">
                            Submit
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>
</div>
