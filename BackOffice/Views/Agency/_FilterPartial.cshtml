<form class="m-form m-form--fit m--margin-bottom-20" action="/agency/search" method="get">
    <div class="row m--margin-bottom-20">
        <div class="col-lg-12 m--margin-bottom-10-tablet-and-mobile">
            <label>
                Tìm kiếm
            </label>
            <input type="text" name="keyword" value="@(Context.Request.Query["keyword"])" class="form-control m-input" placeholder="Tên, Mã số thuế" data-col-index="0">
        </div>        
    </div>
    <div class="m-separator m-separator--md m-separator--dashed"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="float-right">
                <button class="btn btn-brand m-btn m-btn--icon" id="m_search">
                    <span>
                        <i class="la la-search"></i>
                        <span>
                            Search
                        </span>
                    </span>
                </button>
                &nbsp;&nbsp;
                <button class="btn btn-secondary m-btn m-btn--icon" id="m_reset" type="reset">
                    <span>
                        <i class="la la-close"></i>
                        <span>
                            Reset
                        </span>
                    </span>
                </button>
            </div>

        </div>
    </div>
</form>
