@model ListAgencyViewModel

@section Subheaders{
    <h3 class="m-subheader__title m-subheader__title--separator">
        Agency Listing
    </h3>
    <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
        <li class="m-nav__item m-nav__item--home">
            <a href="#" class="m-nav__link m-nav__link--icon">
                <i class="m-nav__link-icon la la-home"></i>
            </a>
        </li>
        <li class="m-nav__separator">
            -
        </li>
        <li class="m-nav__item">
            <a href="/agency" class="m-nav__link">
                <span class="m-nav__link-text">
                    Agency Listing
                </span>
            </a>
        </li>
        <li class="m-nav__separator">
            -
        </li>
        <li class="m-nav__item">
            <a href="#" class="m-nav__link">
                <span class="m-nav__link-text">
                    Search
                </span>
            </a>
        </li>
    </ul>
}

<div class="row">
    <div class="col-xl-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Agency Listing
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <div class="tab-content">
                    <div class="tab-pane active">
                        @await Html.PartialAsync("~/Views/Agency/_FilterPartial.cshtml")
                    </div>
                </div>
                <!--begin::Section-->
                <div class="m-section">
                    <div class="m-section__content">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        NAME
                                    </th>
                                    <th>
                                        USERNAMEf
                                    </th>
                                    <th>
                                        TAX NUMBER
                                    </th>
                                    <th>
                                        PHONE
                                    </th>
                                    <th>
                                        ACTIVED
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    int count = 0;
                                    foreach (var item in Model.Agencies)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td>@item.UserName</td>
                                            <td>@item.TaxNumber</td>
                                            <td>@item.Phone</td>
                                            <td>

                                                @if (item.Actived)
                                                {

                                                    <a href="/agency/unactive?id=@(item.Id)" class="m-badge m-badge--info m-badge--wide" style="text-decoration:none;">
                                                        True
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="/agency/active?id=@(item.Id)" class="m-badge m-badge--danger m-badge--wide" style="text-decoration:none;">
                                                        False
                                                    </a>

                                                }
                                            </td>

                                        </tr>

                                    }
                                }
                            </tbody>
                        </table>
                        <pager pager="@Model.Pager" asp-action="search"  asp-route-keyword="@(Context.Request.Query["keyword"])"></pager>
                    </div>
                </div>
                <!--end::Section-->
            </div>
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>
</div>