<form class="m-form m-form--fit m--margin-bottom-20" action="/campaign/search" method="get">
    <div class="row m--margin-bottom-20">
        <div class="col-lg-9 m--margin-bottom-10-tablet-and-mobile">
            <label>
                Từ khóa tìm kiếm:
            </label>
            <input type="text" name="kw" class="form-control m-input" placeholder="Từ khóa tìm kiếm" data-col-index="0" value="@(Context.Request.Query["kw"])">
        </div>              
    </div>
    <div class="row m--margin-bottom-20">
        <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile">
            <label>
                Trạng thái:
            </label>
            <select name="status" class="form-control m-input">
                @foreach (var item in ViewBag.CampaignStatus)
                {
                    if (item.Value == Context.Request.Query["status"])
                    {
                        <option value="@item.Value" selected>@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }

                }
            </select>
        </div>
        <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile">
            <label>
                Loại chiến dịch:
            </label>
            <select name="type" class="form-control m-input">
                @foreach (var item in ViewBag.CampaignTypes)
                {
                    if (item.Value == Context.Request.Query["type"])
                    {
                        <option value="@item.Value" selected>@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
        </div>
        <div class="col-lg-6 m--margin-bottom-10-tablet-and-mobile">
            <label>
                Chọn DateTime:
            </label>
            <div class="input-daterange input-group" id="m_datepicker_5">
                <input type="text" class="form-control m-input" name="StartDate" value="@Context.Request.Query["StartDate"]">
                <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="la la-ellipsis-h"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="EndDate" value="@Context.Request.Query["EndDate"]">
            </div>
        </div>
    </div>
    <div class="m-separator m-separator--md m-separator--dashed"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="float-right">
                <button class="btn btn-brand m-btn m-btn--icon" id="m_search" type="submit">
                    <span>
                        <i class="la la-search"></i>
                        <span>
                            Tìm kiếm
                        </span>
                    </span>
                </button>
                &nbsp;&nbsp;
                <button class="btn btn-secondary m-btn m-btn--icon" id="m_reset" type="reset">
                    <span>
                        <i class="la la-close"></i>
                        <span>
                            Reset
                        </span>
                    </span>
                </button>
            </div>
           
        </div>
    </div>
</form>