
@{
    ViewData["Title"] = "Statistic_CampaignRevenue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HorizontalMenu{

    <partial name="_HorizontalMenuPartial" />

}

@section Subheaders{
    <h3 class="m-subheader__title m-subheader__title--separator">
        Tổng chi phí chiến dịch
    </h3>
    <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
        <li class="m-nav__item m-nav__item--home">
            <a href="#" class="m-nav__link m-nav__link--icon">
                <i class="m-nav__link-icon la la-home"></i>
            </a>
        </li>
        <li class="m-nav__separator">
            -
        </li>
        <li class="m-nav__item">
            <a href="/campaign" class="m-nav__link">
                <span class="m-nav__link-text">
                    Danh sách chiến dịch
                </span>
            </a>
        </li>
        <li class="m-nav__separator">
            -
        </li>
        <li class="m-nav__item">
            <a href="javascript:;" class="m-nav__link">
                <span class="m-nav__link-text">
                    Biểu đồ
                </span>
            </a>
        </li>
    </ul>
}

<div class="row">
    <div class="col-xl-12">
        <!--begin:: Widgets/Support Tickets -->
        <div class="m-portlet m-portlet--full-height ">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Biểu đồ lợi nhuận
                        </h3>
                    </div>
                </div>

            </div>
            <div class="m-portlet__body">
                <form class="m-form m-form--fit m-form--label-align-right">
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group row">
                            <label class="col-form-label col-lg-3 col-sm-12">
                                Chọn ngày bắt đầu và ngày kết thúc
                            </label>
                            <div class="col-lg-9 col-md-9 col-sm-12">
                                <div class="input-daterange input-group" id="m_datepicker_5">
                                    <input type="text" class="form-control m-input" name="start" id="startDate" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                            <i class="la la-ellipsis-h"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control" name="end" id="endDate" />&nbsp;
                                    <button type="button" class="btn btn-sm btn-info" id="btn-statistic">ĐỒNG Ý</button>
                                </div>
                                <span class="m-form__help">
                                    Chọn khoảng thời gian để kết xuất biểu đồ
                                </span>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-form-label col-lg-3 col-sm-12">
                                Tổng phí dịch vụ: <strong style="color:red;"><span class="TotalOverAll_CampaignService"></span></strong>
                            </label>
                            <label class="col-form-label col-lg-3 col-sm-12">
                                Tổng tiền thừa đã rút: <strong style="color:red;"><span class="TotalOverAll_CampaignServicePayback"></span></strong>
                            </label>
                            <label class="col-form-label col-lg-3 col-sm-12">
                                Tổng trả thực hiện chiến dịch: <strong style="color:red;"><span class="TotalOverAll_CampaignAccountPayback"></span></strong>
                            </label>
                            <label class="col-form-label col-lg-3 col-sm-12">
                                Tổng lợi nhuận: <strong style="color:red;"><span class="TotalOverAll_CampaignRevenue"></span></strong>
                            </label>
                        </div>
                    </div>
                </form>
                <div id="chart_div" style="width: 900px; height: 600px; margin:0 auto;"></div>
            </div>
        </div>
        <!--end:: Widgets/Support Tickets -->
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script src="~/js/campaign_chart.js" type="text/javascript"></script>
}