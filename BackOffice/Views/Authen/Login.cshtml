
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@model LoginModel

<div class="m-login__signin animated flipInX" style="display:block;">
    <div class="m-login__logo">
        <a href="#">
            <img src="/assets/app/media/img//logos/logo-1.png">
        </a>
    </div>
    <div class="m-login__head">
        <h3 class="m-login__title">
            Sign In To System
        </h3>
    </div>
    <form class="m-login__form m-form" asp-action="Login" method="post">
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
        <div class="form-group m-form__group">
            <input class="form-control m-input"  placeholder="Email" autocomplete="off" asp-for="Email">
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input m-login__form-input--last" asp-for="Password" placeholder="Password">
        </div>
        <div class="row m-login__form-sub">
            <div class="col m--align-left m-login__form-left">
                <label class="m-checkbox  m-checkbox--focus">
                    <input type="checkbox" name="remember">
                    Remember me
                    <span></span>
                </label>
            </div>
        </div>
        <div class="m-login__form-action">
            <button id="m_login_signin_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                ENTER
            </button>
        </div>
    </form>
</div>
