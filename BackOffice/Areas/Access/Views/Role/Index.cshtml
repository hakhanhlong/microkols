@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role List";
}

<h2>Danh sách vai trò</h2>

<a asp-action="Create">Tạo mới vai trò</a>
<div class="row">
    <div class="col-md-4">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col"> @Html.DisplayNameFor(m => m.Name) </th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="2">Không có vai trò nào!</td>
                    </tr>
                }
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => role.Name)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@role.Id">Thay đổi</a> |
                            <a asp-action="Delete" asp-route-id="@role.Id" class="delete-item">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>