@model SubmmitCampaignAccountChangeAvatarViewModel
<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <form method="post" action="javascript:;" data-action="@Url.Action("SubmmitCampaignAccountChangeAvatar","Campaign")" id="frmUpdateCampaignAccountRef">
            <div class="modal-header">
                <h5 class="modal-title">Thực hiện công việc</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

              
                <p>Hình ảnh đại diện hiện tại của bạn trên Facebook</p>
                <p class="text-center">
                    <img src="@ViewBag.AvatarUrl" class="img-fluid" />
                </p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Huỷ</button>
                <input type="hidden" asp-for="CampaignId" />
                <input type="submit" value="Xác nhận" class="btn btn-submit btn-primary" />
            </div>
        </form>
    </div>
</div>
