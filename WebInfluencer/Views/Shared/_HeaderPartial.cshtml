</a>


<div class="sidebar-sticky">
    <ul class="nav flex-column">
        <li class="nav-item nav-user">
            <a class="nav-link active" asp-action="ChangeContact" asp-controller="Account">
                <img src="@AppOptions.CurrentValue.GetImageUrl(CurrentUser.Avatar)" width="32" height="32" class="rounded-circle" />
                <span>@CurrentUser.Name</span>

            </a>
        </li>
        <li class="nav-item ">
            <a class="nav-link" asp-controller="Campaign" asp-action="MarketPlace">
               MarketPlace
            </a>
        </li> 
        <li class="nav-item dropdown nav-notif">
