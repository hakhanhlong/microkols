                <span class="d-none">@CurrentUser.Id</span>
                <input type="hidden" name="accessToken" id="frmUpdatefbpostToken" />
            </form>
        </li>

        <li class="nav-item ">

            <a class="nav-link nav-friends" href="javascript:;">
                Bạn bè trên Facebook
            </a>

            <form asp-action="UpdateFbFriends" asp-controller="Account" method="post" id="frmUpdatefbfriends">
                <span class="d-none">@CurrentUser.Id</span>
                <input type="hidden" name="accessToken" id="frmUpdatefbfriendsToken" />
            </form>
        </li>
        <li class="nav-item ">
            <a class="nav-link" asp-controller="Wallet" asp-action="Index">
                   Thông tin ví
            </a>
        </li>
        <li class="nav-item ">
            <a class="nav-link" asp-controller="Account" asp-action="ChangePassword">
                Cấu hình
            </a>
        </li>
        <li class="nav-item ">
            <a class="nav-link" asp-action="Logout" asp-controller="Auth"> 
            Thoát</a>
        </li>

        <li class="nav-item nav-sep">
            <hr />
        </li>

         <li class="nav-item ">
            <a class="nav-link" href="https://microkols.com/introduce.html" target="_blank">Giới thiệu</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="https://microkols.com/policy.html">Chính sách & Quy định</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="https://microkols.com/qna.html">Hỏi & Đáp</a>
        </li>
    </ul>
</div>




